<div class="form__wrapper">
  <div class="card pt-4">
    <div class="card-section">
      <div class="row column">
          <%= post_author_select_field form, :decidim_author_id, label: t("decidim.nbs.actions.author_id") %>
      </div>

      <div class="row column">
        <%= form.translated :text_field, :title, autofocus: true, aria: { label: :title } %>
      </div>
      <div class="row column">
        <%= form.translated :editor, :body, lines: 30, aria: { label: :body } %>
      </div>
      <div class="row">
        <div class="columns">
          <%= form.datetime_field :published_at %>
        </div>
      </div>


      <div class="row">
  <div class="columns">
    <%= form.text_field :iframe_src, label: "URL" %>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= form.text_field :iframe_width, label: t("decidim.nbs.admin.posts.form.iframe_width"), value: form.object.iframe_width || "100%" %>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= form.number_field :iframe_height, label: t("decidim.nbs.admin.posts.form.iframe_height"), value: form.object.iframe_height || 800 %>
  </div>
</div>


    </div>
  </div>

</div>
